@model IEnumerable<OnlineCoursePortalWeb.Models.CourseViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Course</h1>

<p>
    @if (User.IsInRole("ApplicationUser"))
  {
    <a type="button" class="btn btn-warning" asp-action="Create" asp-controller="Course">Create Course</a>
  }
</p>
<table id="tblData" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
            @Html.DisplayFor(modelItem => item.Id)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableSeats)
                </td>
                <td>
                    @if (User.IsInRole("ApplicationUser"))
                    {
                     <a type="button" class="btn btn-warning" asp-action="Create" asp-controller="CourseBooking" asp-route-CourseId="@item.Id">Book</a>
               
                        <a type="button" class="btn btn-warning" asp-action="Update" asp-controller="Course" asp-route-id="@item.Id">Edit</a>

                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Course" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
   
</table>
